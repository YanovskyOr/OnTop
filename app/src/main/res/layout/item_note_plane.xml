<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cl_note_plane"
android:background="@color/color_panel_background"
android:nestedScrollingEnabled="false"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginVertical="4dp"
    android:padding="8dp"
    >

<ImageButton
    android:id="@+id/ib_title_handle_note"
    android:layout_width="wrap_content"
    android:minWidth="2dp"
    android:layout_height="18dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/color_on_top_primary_blue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tv_note_plane_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Daily"
    android:textColor="?colorOnSecondary"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="@+id/ib_title_handle_note"
    app:layout_constraintStart_toEndOf="@+id/ib_title_handle_note"
    app:layout_constraintTop_toTopOf="@+id/ib_title_handle_note" />


<TextView
    android:id="@+id/tv_note_plane_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingBottom="8dp"
    android:paddingHorizontal="8dp"
    android:text="note text here"
    android:textColor="?colorOnSecondary"
    android:textSize="16sp"
    tools:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text "
    tools:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_note_plane_title"
    tools:listitem="@layout/item_task_block" />


</androidx.constraintlayout.widget.ConstraintLayout>
