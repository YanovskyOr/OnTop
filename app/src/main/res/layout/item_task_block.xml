<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_task_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/color_on_top_blue"
    app:cardElevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_centerInParent="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/tv_task_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS A TASK"
            android:textColor="?colorOnSecondary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


<!--            <androidx.appcompat.widget.AppCompatCheckBox-->
<!--                android:id="@+id/rb_task_card_status"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:button="@null"-->
<!--                android:background="@drawable/radio_button"/>-->
        <TextView
            android:id="@+id/tv_task_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="count"
            android:textColor="?colorOnSecondary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/ib_task_card_status"
            app:layout_constraintEnd_toStartOf="@+id/ib_task_card_status"
            app:layout_constraintTop_toTopOf="@+id/ib_task_card_status" />

        <ImageButton
            android:id="@+id/ib_task_card_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_button"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>