<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_to_do_list_task_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start">

    <ImageButton
        android:id="@+id/ib_task_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/radio_button"
        android:button="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="this is a task"
        android:textColor="?colorOnBackground"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_task_status"
        app:layout_constraintStart_toEndOf="@+id/ib_task_status"
        app:layout_constraintTop_toTopOf="@+id/ib_task_status" />


    </androidx.constraintlayout.widget.ConstraintLayout>