<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:state_checked="false">
            <shape android:shape="oval">
                <size
                    android:width="30dp"
                    android:height="30dp" />
                <padding
                    android:bottom="5dp"
                    android:left="5dp"
                    android:right="5dp"
                    android:top="5dp" />
                <stroke android:color="@color/color_on_top_blue"
                    android:width="1dp"/>
            </shape>

    </item>

    <item
        android:state_checked="true"
        android:drawable="@drawable/radio_button_checked_blue">
    </item>
</selector>