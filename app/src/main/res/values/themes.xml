<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnTop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_on_top_primary_blue</item>
        <item name="colorPrimaryVariant">@color/color_on_top_primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">?android:attr/colorPrimary</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="Splash.Theme.OnTop" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_screen_background</item>

        //for full screen activity (optional)
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->

    </style>






    <style name="ThemeOverlay.OnTop.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.OnTop</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.OnTop.Title.Text</item>
        <item name="colorAccent">@color/color_on_top_primary_blue</item>
    </style>

    <style name="MaterialAlertDialog.OnTop" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.OnTop.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.OnTop.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearance.OnTop.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


<!--    FAB for blocks      -->
    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="fabCustomSize">15dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>

</resources>